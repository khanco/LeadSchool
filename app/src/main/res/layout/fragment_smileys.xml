<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/llSmiley"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/transparent"
    android:clickable="true"
    android:focusable="true"
    android:gravity="center"
    android:paddingLeft="@dimen/dp35"
    android:paddingRight="@dimen/dp35">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp5"
        android:layout_marginRight="@dimen/dp5"
        android:clipChildren="true"
        app:cardCornerRadius="@dimen/dp50"
        app:cardElevation="@dimen/dp4">

        <android.support.v7.widget.RecyclerView
            android:id="@+id/rvSmileys"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@+id/chatFooter"
            android:layout_below="@+id/chatHeader"
            android:background="@color/light_bg"
            android:orientation="horizontal"
            app:layoutManager="android.support.v7.widget.LinearLayoutManager"
            tools:listitem="@layout/list_item_smiley" />
    </android.support.v7.widget.CardView>
</LinearLayout>